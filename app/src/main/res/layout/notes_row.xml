<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.thnki.classroom.views.SquareImageView
                    android:id="@+id/createrImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/user_icon_accent"/>

                <LinearLayout
                    android:id="@+id/userInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/optionsIconContainer"
                    android:layout_toRightOf="@+id/createrImage"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/createrName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/userTextPadding"
                        android:text="Saleem Khan"
                        android:textSize="@dimen/price_text_size"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/notesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sample notes title"
                        android:textSize="12sp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/optionsIconContainer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_circle_drawable"
                    android:padding="5dp"
                    android:src="@drawable/ic_more_vert_black_48dp"/>

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/notesDescription"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/imagesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.thnki.classroom.views.SquareImageView
                    android:id="@+id/singleImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/notes"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/dualImageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:weightSum="2">

                    <com.thnki.classroom.views.RectangleImageView
                        android:id="@+id/dualImage1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/notes"/>

                    <com.thnki.classroom.views.RectangleImageView
                        android:id="@+id/dualImage2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/notes"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tripleImageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/tripleImageTopContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.thnki.classroom.views.SquareImageView
                            android:id="@+id/tripleImage1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="2.5dp"
                            android:layout_weight="1"
                            android:src="@mipmap/notes"/>

                        <com.thnki.classroom.views.SquareImageView
                            android:id="@+id/tripleImage2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2.5dp"
                            android:layout_weight="1"
                            android:src="@mipmap/notes"/>
                    </LinearLayout>

                    <com.thnki.classroom.views.RectangleImageView
                        android:id="@+id/tripleImage3"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/notes"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/quadImageContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/quadImageTopContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">

                        <com.thnki.classroom.views.SquareImageView
                            android:id="@+id/quadImage1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="2.5dp"
                            android:layout_weight="1"
                            android:src="@mipmap/notes"/>

                        <com.thnki.classroom.views.SquareImageView
                            android:id="@+id/quadImage2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2.5dp"
                            android:layout_weight="1"
                            android:src="@mipmap/notes"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/quadImageBottomContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.thnki.classroom.views.SquareImageView
                            android:id="@+id/quadImage3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="2.5dp"
                            android:layout_weight="1"
                            android:src="@mipmap/notes"/>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2.5dp"
                            android:layout_weight="1">

                            <com.thnki.classroom.views.SquareImageView
                                android:id="@+id/quadImage4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/notes"
                                />

                            <TextView
                                android:id="@+id/additionalImageCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@color/transparentWhite"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="+3"
                                android:textAppearance="?android:textAppearanceLarge"
                                android:visibility="gone"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>