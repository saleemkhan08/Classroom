<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/userDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.thnki.classroom.views.SquareImageView
                        android:id="@+id/profileImg"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/profileImg"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/profileName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Saleem"
                            android:textAppearance="?android:textAppearanceLarge"/>

                        <TextView
                            android:id="@+id/profileId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="c10001"/>
                    </LinearLayout>
                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/selectMonthBtn"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userDetails"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="10/20/2017"
                />

            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:id="@+id/leavesList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userDetails"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:mcv_selectionColor="@color/colorAccent"
                app:mcv_showOtherDates="all"
                />

            <RelativeLayout
                android:id="@+id/selectMonthContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/userDetails"
                android:background="@color/colorPrimary"
                android:visibility="gone">

                <TextView
                    android:id="@+id/selectMonthTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_drawable"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="10/20/2017"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/decreaseMonth"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_circle_drawable"
                    android:clickable="true"
                    android:padding="3dp"
                    android:src="@drawable/ic_keyboard_arrow_left_white_48dp"/>

                <ImageView
                    android:id="@+id/increaseMonth"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_circle_drawable"
                    android:clickable="true"
                    android:padding="3dp"
                    android:src="@drawable/ic_keyboard_arrow_right_white_48dp"/>

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/leavesProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/selectMonthBtn"
                android:padding="150dp"
                android:visibility="gone"/>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/fabContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addLeaves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@mipmap/ic_add_white_48dp"/>
    </RelativeLayout>

</RelativeLayout>
